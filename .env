# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
TELEGRAM_BOT_USERNAME=YOUR_BOT_USERNAME_WITHOUT_AT
ADMIN_ID=YOUR_ADMIN_TELEGRAM_ID

# Telegram Channel ID for logging errors (must be a number, e.g., -1001234567890)
LOG_CHANNEL_ID=

# Database Configuration (Example for SQLite)
# برای راه‌اندازی سریع، از SQLite استفاده کنید. فایل دیتابیس به صورت خودکار ساخته می‌شود.
DATABASE_URL=sqlite:///vpn_bot.db

# ---
# Database Configuration (Example for PostgreSQL)
# For production, it's recommended to use PostgreSQL.
# Comment out the SQLite line above and uncomment this one.
# DATABASE_URL=postgresql://user:password@host:port/dbname
# ---


# Payment Gateway Configuration (Zarinpal)
ZARINPAL_MERCHANT_ID=YOUR_ZARINPAL_MERCHANT_ID


# Marzban Panel API Configuration (Legacy - No longer directly used by the bot)
# You can leave these empty as panel info is now managed via the admin panel
MARZBAN_API_BASE_URL=
MARZBAN_API_USERNAME=
MARZBAN_API_PASSWORD=


# Optional Settings
CHANNEL_LOCK_ID=@yourchannel  # Channel ID for forced join (optional)